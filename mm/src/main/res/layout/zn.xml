<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/a74" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:background="@color/u6" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MemoryHook" android:textAllCaps="false"/>
                <Button android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bp1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Confirm" android:textAllCaps="false" android:layout_marginStart="10dp"/>
                <Button android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bp2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Report" android:textAllCaps="false" android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="enable"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bp5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"/>
                <TextView android:textSize="12sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MemoryHook 开关，重启生效"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="stacktrace"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bpb" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="12sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="是否获取堆栈,注意⚠️开启可能导致进程卡死，建议只针对单个 so 开启，对于分配特别频繁的 so，建议设置 min/max/sampling"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="mm"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bp_" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="apprand"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bp9" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="tools/mp"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bpa" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="all"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bp8" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="extreme"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bp6" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="12sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="是否Hook默认ignore的系统so,开启会严重影响性能⚠️"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="mmap hook"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bp7" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="12sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="是否 hook️ mmap/munmap"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="hookRegex"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bpi" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=".*com\\.tencent\\.mm.*\\.so$" android:maxLines="3"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ignoreRegex"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bpj" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="nullable" android:maxLines="3"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="duration(hours)"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bph" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1" android:maxLines="3" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="StackLogThreshold(def 50M)"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bpn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="52428800" android:maxLines="3" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="min(取堆栈的最小size,&gt;=0,0表示不限制)"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bpl" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="0" android:maxLines="3" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="max(取堆栈的最大size,0(不限制)或&gt;minSize)"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bpk" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="0" android:maxLines="3" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="sampling(取样率,(0,1])"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bpm" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1" android:maxLines="3" android:inputType="numberDecimal"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:background="@color/u6" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PthreadHook" android:textAllCaps="false"/>
                <Button android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bp3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Confirm" android:textAllCaps="false" android:layout_marginStart="10dp"/>
                <Button android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bp4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Report" android:textAllCaps="false" android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="enable"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bpc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"/>
                <TextView android:textSize="12sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PthreadHook 开关，重启生效"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="mm"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bpf" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="apprand"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bpe" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="tools/mp"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bpg" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="all"/>
                <CheckBox android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/bpd" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="hookSoRegex"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bpp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=".*\\.so$" android:maxLines="3"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ignoreRegex"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bpr" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="nullable" android:maxLines="3"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="hookThreadRegex"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bpq" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=".*" android:maxLines="3"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:gravity="center" android:layout_gravity="center_vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="duration(hours)"/>
                <EditText android:textSize="15sp" android:layout_gravity="center" android:id="@+id/bpo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1" android:maxLines="3" android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
